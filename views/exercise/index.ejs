<a href="/exercise/add">Añadir Ejercicio</a>
<br>
<br>
<table class="table table-striped table-hover table-condensed">
	<thead>
	<tr>
		<th colspan="6">Exercises</th>
	</tr>
	<tr>
		<th>Langue Direction</th>
		<th>Ex Type</th>
		<th>Word Question</th>
		<th>Word Answer</th>
		<th>Author</th>
		<th>Details</th>
	</tr>
	</thead>
	<% for(var i = 0; i < exercises.length; i++) { %>
	<tr>
		<td>
			<%= exercises[i].qstnLang %>
		</td>
		<td>
			<%= exercises[i].typeEx %>
		</td>
		<td>
			[<%= exercises[i].Translation.Word1.langue %>]<%= exercises[i].Translation.Word1.word %>
			(<%= exercises[i].Translation.Word1.aception %>)
		</td>
		<td>
			[<%= exercises[i].Translation.Word2.langue %>]<%= exercises[i].Translation.Word2.word %>
			(<%= exercises[i].Translation.Word2.aception %>)
		</td>
		<td>
			<%= exercises[i].User.username %>
		</td>
		<% if(!(exercises[i].typeEx == '1' | exercises[i].typeEx == '2')) { %>
		<td><a href="/exercise/<%= exercises[i].id %>/detail">
				<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"/> </span>
			</a>
		</td>
		<% } %>
	</tr>
	<% } %>
</table>