<a href="/user/new">Añadir Usuario</a>
<br>
<br>
<form enctype="multipart/form-data" action="/user/upload" method="post">
	<div class="form-group">
		<label for="exampleInputFile">Cargar LOTE de Usuarios</label>
		<input type="file" name="userLot" accept=".csv" required>
		<p class="help-block">Seleccione un fichero .CSV válido.</p>
	</div>
	<button type="submit" class="btn btn-default">Enviar</button>
</form>
<br>
<br>
<table class="table table-striped table-hover table-condensed">
	<thead>
	<tr>
		<th colspan="3">Students</th>
	</tr>
	<tr>
		<th scope="col">Username</th>
		<th>Editar</th>
		<th>Progreso</th>
	</tr>
	</thead>
	<% for(var i = 0; i < students.length; i++) { %>
	<tr>
		<td>
			<a href="/user/<%= students[i].username %>">
				<span class="glyphicon glyphicon-user" aria-hidden="true"> </span>
				<%= students[i].username %>
			</a>
		</td>
		<td>
			<a href="/user/<%= students[i].username %>/edit">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"/> </span>Editar
			</a>
		</td>
		<td>
			<a href="/user/<%= students[i].username %>/show">
				<span class="glyphicon glyphicon-folder-open" aria-hidden="true"/> </span>Notas
			</a>
		</td>
	</tr>
	<% } %>
</table>
<br>

