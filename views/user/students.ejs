<br>
<% if(!group){ %>
<% include _add.ejs %>
<% } %>
<br>
<table class="table table-striped table-hover table-condensed">
	<thead>
	<tr>
		<th colspan="3">
			<% if(group){ %>
			Clase "<%= group.name %>" del Profesor "<%= group.User.username %>"<br>
			Idiomas: <%= group.langTranslation %><br>
			<% } %>
			Students (<%= students.length %>)
		</th>
	</tr>
	<tr>
		<th scope="col">Username</th>
		<th>Editar</th>
		<th>Progreso</th>
	</tr>
	</thead>
	<% for(var i = 0; i < students.length; i++) { %>
	<tr>
		<td>
			<a href="/user/<%= students[i].username %>">
				<span class="glyphicon glyphicon-user" aria-hidden="true"> </span>
				<%= students[i].username %>
			</a>
		</td>
		<td>
			<a href="/user/<%= students[i].username %>/edit">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"/> </span>Editar
			</a>
		</td>
		<td>
			<a href="/user/<%= students[i].username %>/show">
				<span class="glyphicon glyphicon-folder-open" aria-hidden="true"/> </span>Notas
			</a>
		</td>
	</tr>
	<% } %>
</table>
<% if(group){ %>
<a href="/group">Volver a GESTION de GRUPOS</a>
<% } %>