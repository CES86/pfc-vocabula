<a href="/word/new">Añadir Word</a>
<br>
<br>
<form enctype="multipart/form-data" action="/word/upload" method="post">
	<div class="form-group">
		<label for="exampleInputFile">Cargar LOTE de Words</label>
		<input type="file" name="wordLot" accept=".csv" required>
		<p class="help-block">Seleccione un fichero .CSV válido.</p>
	</div>
	<button type="submit" class="btn btn-default">Enviar</button>
</form>
<br>
<br>
<table class="table table-striped table-hover table-condensed">
	<thead>
	<tr>
		<th colspan="3">Words</th>
	</tr>
	<tr>
		<th>Langue</th>
		<th>Word</th>
		<th>Aception</th>
	</tr>
	</thead>
	<% for(var i = 0; i < words.length; i++) { %>
	<tr>
		<td>
			<%= words[i].langue %>
		</td>
		<td>
			<%= words[i].word %>
		</td>
		<td>
			<%= words[i].aception %>
		</td>
	</tr>
	<% } %>
</table>
