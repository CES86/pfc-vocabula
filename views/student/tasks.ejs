<table class="table table-striped table-hover table-condensed">
	<thead>
	<tr>
		<th colspan="6">
			Tareas (<%= packsStudent.length %>)
		</th>
	</tr>
	<tr>
		<th>Langues</th>
		<th>Teacher</th>
		<th>Titulo</th>
		<th>Descripcion</th>
		<th>Completado</th>
		<th>Practicar</th>
	</tr>
	</thead>
	<% for(var i = 0; i < packsStudent.length; i++) { %>
	<tr>
		<td>
			<%= packsStudent[i].Pack.langTranslation %>
		</td>
		<td>
			<%= packsStudent[i].Pack.User.username %>
		</td>
		<td>
			<%= packsStudent[i].Pack.title %>
		</td>
		<td>
			<%= packsStudent[i].Pack.description %>
		</td>
		<td>
			<% if(packsStudent[i].done){ %>
			<span class="glyphicon glyphicon-ok" aria-hidden="true"/> </span>
			<% }else{ %>
			<span class="glyphicon glyphicon-remove" aria-hidden="true"/> </span>
			<% } %>
		</td>
		<td>
			<a href="/user/<%= user.username %>/homework/<%= packsStudent[i].Pack.id %>">
				<% if(packsStudent[i].done){ %>
				<span class="glyphicon glyphicon-repeat" aria-hidden="true"/> </span>
				<% }else{ %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"/> </span>
				<% } %>
			</a>
		</td>
	</tr>
	<% } %>
</table>